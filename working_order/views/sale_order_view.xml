<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="sale_order_extend_form" model="ir.ui.view">
			<field name="name">sale.order.form</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_id']" position="after">
					<field name="coupon_code"/>
					<field name="store_id"/>
					<field name="market_place_id"/>
					<field name="delivery_method_id"/>
					<field name="platfrom_id"/>
				</xpath>
				<xpath expr="//group[@name='sales_person']" position="before">
					<group string="Special Information" name="special_information">
						<field name="payment_menthod"/>
						<field name="transaction_id"/>
						<field name="order_ip"/>
						<field name="tracking_number"/>
						<field name="order_shipping_location"/>
					</group>
				</xpath>
				<xpath expr="//field[@name='order_line']/tree/price_tax" position="before">
					<button class="oe_highlight" name="btn_img" type="object" string="Input Image"/>
				</xpath>



			</field>
		</record>

